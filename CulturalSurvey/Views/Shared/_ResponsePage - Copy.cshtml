<script>

    var status = 'online';
    var current_status = 'online';

    function check_internet_connection() {
        if (navigator.onLine) {
            status = 'online';
        }
        else {
            status = 'offline';
        }

        if (current_status != status) {
            if (status == 'online') {         
                success("Hurray! Internet is connected.", "topCenter");
            }
            else {            
                error("Opps! Internet is disconnected.", "topCenter");
            }
            current_status = status;
        }
    }

    check_internet_connection();

    setInterval(function () {
        check_internet_connection();
    }, 1000);

</script>